<resources>

    <style name="ParentAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:textColor">@color/textColorNormal</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="ParentAppTheme">
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:maxWidth">50dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>


    <style name="ToolbarTheme" parent="ParentAppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Color for overflow menu for isntance -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PopupTheme" parent="ParentAppTheme">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="EditTextTheme" parent="AppTheme"/>

    <style name="MaterialStatusBar" parent="AppTheme"/>
    <style name="LightTheme" parent="AppTheme"/>

    <style name="ButtonTransparentTheme">
        <item name="colorButtonNormal">@android:color/transparent</item>
    </style>

    <style name="AppCommonButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
