<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.posko.pos">

    <application
        android:name=".PoskoApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/flavored_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activities.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/LightTheme"
            android:screenOrientation="portrait"
            android:name=".ui.activities.login.LoginActivity"/>

        <activity
            android:theme="@style/MaterialStatusBar"
            android:name=".ui.activities.home.HomeActivity"
            android:screenOrientation="portrait" />


    </application>

</manifest>